
@model BookLibrary.ViewModel.RegisterViewModel


@{
    ViewData["Title"] = "Register";
    //Layout = "_AdvLayout";
}

@*<h1>Register</h1>*@

@*<h4>RegisterViewModel</h4>*@

<hr />
<div class="row">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Register</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form asp-action="Register">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" data-sb-validations="required" />
                        <label asp-for="UserName" class="control-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" />
                        <label asp-for="Email" class="control-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmEmail" class="form-control" />
                        <label asp-for="ConfirmEmail" class="control-label"></label>
                        <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" />
                        <label asp-for="Password" class="control-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Address" class="form-control" />
                        <label asp-for="Address" class="control-label"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Phone" class="form-control" />
                        <label asp-for="Phone" class="control-label"></label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Age" class="form-control" />
                        <label asp-for="Age" class="control-label"></label>
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                    </div>
                    <br />
                    <div class="form-floating mb-3">
                        <input type="submit" value="Register" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<br />



